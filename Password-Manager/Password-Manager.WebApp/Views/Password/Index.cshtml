@model Password_Manager.WebApp.Models.MasterPasswordVM

@{
    ViewData["Title"] = "Index";
}

<h3>
    Wprowadź hasło główne
</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-action="PasswordList" asp-controller="Password" method="post" class="form-horizontal" role="form">

            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MasterPassword" class="control-label"></label>
                <input asp-for="MasterPassword" class="form-control" />
                <span asp-validation-for="MasterPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Logowanie" />
            </div>
        </form>
    </div>
</div>
